<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="111">
    <server artifactsdir="artifacts" commandRepositoryLocation="default" serverId="gauge" tokenGenerationKey="token"/>
    <pipelines group="Diamond-Dependency">
        <pipeline name="PipelineA">
            <materials>
                <git url="$git-on-git-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="success"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls"/>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
        <pipeline name="PipelineB">
            <materials>
                <pipeline pipelineName="PipelineA" stageName="defaultStage"
                          materialName="PipelineA-downstream"/>
            </materials>
            <stage name="defaultStage">
                <approval type="success"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls"/>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
        <pipeline name="PipelineC">
            <materials>
                <pipeline pipelineName="PipelineA" stageName="defaultStage"
                          materialName="PipelineA-downstream"/>
            </materials>
            <stage name="defaultStage">
                <approval type="success"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls">
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
        <pipeline name="PipelineD">
            <materials>
                <pipeline pipelineName="PipelineB" stageName="defaultStage"
                          materialName="PipelineB-downstream"/>
                <pipeline pipelineName="PipelineC" stageName="defaultStage"
                          materialName="PipelineC-downstream"/>
            </materials>
            <stage name="defaultStage">
                <approval type="success"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls">
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>

        <pipeline name="Building-Pipeline">
            <materials>
                <git url="$git-on-git-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="success"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="rake" args="wait_for_stopjob_file" workingdir="git"/>
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>

    <pipeline name="Failing-Pipeline">
        <materials>
            <git url="$git-on-git-pipeline" dest="git" materialName="git" autoUpdate="false"/>
        </materials>
        <stage name="defaultStage">
            <approval type="success"/>
            <jobs>
                <job name="defaultJob">
                    <tasks>
                        <exec command="fail"/>
                    </exec>
                </tasks>
                <tasks>
                    <exec command="rake" args="wait_for_stopjob_file" workingdir="git"/>
                </exec>
            </tasks>
            </job>
        </jobs>
    </stage>
</pipeline>


    </pipelines>
     

</cruise>
